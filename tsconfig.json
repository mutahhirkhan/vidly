{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es5",
		"lib": ["es2021", "dom"],
		"rootDir": "./",
		"allowJs": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "build",
		"sourceMap": true,
		"skipLibCheck": true
	},
	"typeRoots": ["./node_modules/@types", "./types"],
	"lib": ["es2015"]
}
